<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduce5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="815dp"
        android:background="@mipmap/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="328dp"
                android:layout_height="230dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/pacifico"
                android:text="Và đó là những thông tin mà tôi muốn chia sẻ. Cảm ơn và xin chúc các bạn một ngày vui vẻ."
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btnquaylai5"
            android:layout_width="188dp"
            android:layout_height="164dp"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="83dp"
            android:background="@mipmap/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

        <TextView
            android:id="@+id/btnquaylai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/coiny"
            android:text="Quay lại"
            android:textColor="#3A147E"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnquaylai5"
            app:layout_constraintEnd_toEndOf="@+id/btnquaylai5"
            app:layout_constraintStart_toStartOf="@+id/btnquaylai5"
            app:layout_constraintTop_toTopOf="@+id/btnquaylai5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>